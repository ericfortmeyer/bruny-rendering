{
    "name": "ericfortmeyer/bruny-rendering",
    "description": "The Rendering Enging for the Bruny Micro Framing",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phan/phan": "^5.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bruny\\Rendering\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Eric Fortmeyer",
            "email": "e.fortmeyer01@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0.1"
    },
    "scripts": {
        "test": "composer exec phpunit",
        "analyze": "composer exec phan",
        "analyze-init": "composer exec \"phan --init\"",
        "lint": "composer exec \"phpcs src --standard=PSR12\"",
        "lint-fix": "composer exec \"phpcbf src --standard=PSR12\""
    }
}
